<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textoNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:hint="Escribe tu nombre completo"
                android:paddingLeft="10dp"
                android:inputType="textPersonName|textCapSentences" />

            <EditText
                android:id="@+id/textoFecha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Escribe tu fecha de nacimiento"
                android:inputType="textPersonName|textCapSentences"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/textoEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Escribe tu email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp" />


            <Button
                android:id="@+id/botonGuardarAlta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="200dp"

                android:text="GUARDAR" />

            <Button
                android:id="@+id/botonVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:onClick="volver"
                android:text="VOLVER" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>