<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayuda">

    <include
        android:id="@+id/include5"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/include5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenPantalla1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/texto_imagen"
                app:srcCompat="@drawable/pantalla_1" />

            <TextView
                android:id="@+id/explicacionPantalla1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:justificationMode="inter_word"
                android:text="@string/explicacion_pantalla_1" />

            <ImageView
                android:id="@+id/imagenPantalla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/texto_imagen"
                app:srcCompat="@drawable/pantalla_2" />

            <TextView
                android:id="@+id/explicacionPantalla2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:justificationMode="inter_word"
                android:text="@string/explicacion_pantalla_2" />

            <ImageView
                android:id="@+id/imagenPantalla3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/texto_imagen"
                app:srcCompat="@drawable/pantalla_3_1" />

            <TextView
                android:id="@+id/explicacionPantalla3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:justificationMode="inter_word"
                android:text="@string/explicacion_pantalla_3_1" />

            <ImageView
                android:id="@+id/imagenPantalla3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/texto_imagen"
                app:srcCompat="@drawable/pantalla_3_2" />

            <TextView
                android:id="@+id/explicacionPantalla3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:justificationMode="inter_word"
                android:text="@string/explicacion_pantalla_3_2" />

            <ImageView
                android:id="@+id/imagenPantalla4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/texto_imagen"
                app:srcCompat="@drawable/pantalla_4" />

            <TextView
                android:id="@+id/explicacionPantalla4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:justificationMode="inter_word"
                android:text="@string/explicacion_pantalla_4" />

            <ImageView
                android:id="@+id/imagenPantalla5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/texto_imagen"
                app:srcCompat="@drawable/pantalla_5" />

            <TextView
                android:id="@+id/explicacionPantalla5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/explicacion_pantalla_5" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/botonVolverAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="52dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>