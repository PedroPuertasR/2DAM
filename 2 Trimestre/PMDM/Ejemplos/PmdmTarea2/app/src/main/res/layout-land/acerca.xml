<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acerca">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/labelAppName"
        style="@style/TextMediumSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:labelFor="@+id/textAppName"
        android:text="@string/nombre_app_label"
        app:layout_constraintBottom_toBottomOf="@+id/textAppName"
        app:layout_constraintEnd_toStartOf="@+id/textAppName"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textAppName"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/labelNombreAutor"
        style="@style/TextMediumSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:labelFor="@+id/textNombreAutor"
        android:text="@string/nombre_autor_label"
        app:layout_constraintBottom_toBottomOf="@+id/textNombreAutor"
        app:layout_constraintEnd_toStartOf="@+id/textNombreAutor"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textNombreAutor"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/labelAnio"
        style="@style/TextMediumSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:labelFor="@+id/textoAnio"
        android:text="@string/anio_label"
        app:layout_constraintBottom_toBottomOf="@+id/textoAnio"
        app:layout_constraintEnd_toStartOf="@+id/textoAnio"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textoAnio"
        app:layout_constraintVertical_bias="0.434" />

    <EditText
        android:id="@+id/textAppName"
        style="@style/TextMediumSize"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/textNombreAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <EditText
        android:id="@+id/textoAnio"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/anio_creacion_app"
        app:layout_constraintBottom_toTopOf="@+id/botonVolver"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/textNombreAutor"
        style="@style/TextMediumSize"
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="@string/autor"
        app:layout_constraintBottom_toTopOf="@+id/textoAnio"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>