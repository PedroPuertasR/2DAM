<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ColorText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ImageNoBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ImageMenu" parent="@style/ImageNoBackground">
        <item name="srcCompat">@drawable/ic_menu_light</item>
    </style>
    <style name="TextBigSize" parent="@style/ColorText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextMediumSize" parent="@style/ColorText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextSmallSize" parent="@style/ColorText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextExtraSmallSize" parent="@style/ColorText">
        <item name="android:textSize">10sp</item>
    </style>
</resources>